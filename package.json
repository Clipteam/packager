{
  "name": "@Clipteam/packager",
  "version": "1.2.0",
  "description": "Converts Scratch projects into HTML files, zip archives, or executable programs for Windows, macOS, and Linux.",
  "main": "dist/packager.js",
  "scripts": {
    "start": "webpack serve",
    "clean": "rimraf dist",
    "build": "yarn run clean && webpack",
    "build-prod": "cross-env NODE_ENV=production yarn run build",
    "watch": "webpack --watch",
    "build-standalone": "cross-env STANDALONE=1 yarn run build && node src/build/generate-standalone.js",
    "build-standalone-prod": "cross-env NODE_ENV=production yarn run build-standalone",
    "build-node": "cross-env BUILD_MODE=node yarn run build",
    "build-node-prod": "cross-env NODE_ENV=production yarn run build-node",
    "test": "jest",
    "prepublishOnly": "yarn run test && yarn run build-node-prod && node src/build/nodejs/update-readme.js node",
    "postpublish": "node src/build/nodejs/update-readme.js restore"
  },
  "author": "GarboMuffin & Clipteam",
  "homepage": "https://github.com/Clipteam/packager#readme",
  "keywords": [
    "scratch"
  ],
  "bugs": {
    "url": "https://github.com/Clipteam/packager/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Clipteam/packager.git"
  },
  "funding": "https://github.com/sponsors/GarboMuffin",
  "license": "Apache-2.0",
  "dependencies": {
    "@fiahfy/icns": "0.0.7",
    "@turbowarp/json": "^0.1.1",
    "@turbowarp/sbdl": "^2.3.0",
    "clipcc-extension": "^0.1.9",
    "cross-fetch": "^3.1.4",
    "jszip": "^3.7.1",
    "sha.js": "^2.4.11"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "babel-jest": "^27.4.5",
    "babel-loader": "^8.2.3",
    "clipcc-vm": "git+https://github.com/Clipteam/clipcc-vm.git#master",
    "comlink": "^4.3.1",
    "copy-webpack-plugin": "^6.4.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.7",
    "fastestsmallesttextencoderdecoder": "^1.0.22",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "jest": "^27.4.5",
    "rimraf": "^2.7.1",
    "scratch-audio": "0.1.0-prerelease.20200528195344",
    "scratch-render": "git+https://github.com/TurboWarp/scratch-render.git#develop",
    "scratch-render-fonts": "^1.0.0-prerelease.20210401210003",
    "scratch-storage": "git+https://github.com/TurboWarp/scratch-storage.git#develop",
    "scratch-svg-renderer": "git+https://github.com/TurboWarp/scratch-svg-renderer.git#develop",
    "style-loader": "^2.0.0",
    "svelte": "^3.44.3",
    "svelte-loader": "^3.1.2",
    "url-loader": "^4.1.1",
    "webpack": "^4.46.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^3.11.3",
    "worker-loader": "^2.0.0"
  }
}
